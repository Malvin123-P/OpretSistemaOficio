@model IEnumerable<OfiGest.Models.DepartamentoModel>
@{
    ViewData["Title"] = "Listado de Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rol = Context.Session.GetString("RolUsuario");
}

<style>
    /* Estilos para el hover de las filas de la tabla */
    .table-wrapper tbody tr {
        transition: background-color 0.2s ease, box-shadow 0.2s ease;
    }

        .table-wrapper tbody tr:hover {
            background-color: #f5f5f5 !important;
            cursor: pointer;
        }

        /* Efecto de sombra al hacer clic en la tabla principal */
        .table-wrapper tbody tr:active {
            box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.2);
            background-color: #e9ecef !important;
            transition: all 0.1s ease;
        }

        /* Para mantener la apariencia de filas deshabilitadas incluso en hover */
        .table-wrapper tbody tr.fila-deshabilitada:hover {
            background-color: #f8d7da !important;
        }

        /* Para mantener la apariencia de filas que requieren restablecer incluso en hover */
        .table-wrapper tbody tr.requiere-restablecer:hover {
            background-color: #ffeaa7 !important;
        }

    /* Estilos para las filas de la tabla de divisiones */
    .divisiones-scroll tbody tr {
        transition: background-color 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }

        .divisiones-scroll tbody tr:hover {
            background-color: #f5f5f5 !important;
        }

        /* Efecto de sombra al hacer clic en la tabla de divisiones */
        .divisiones-scroll tbody tr:active {
            box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.2);
            background-color: #e9ecef !important;
            transition: all 0.1s ease;
        }

    .divisiones-scroll {
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

        .divisiones-scroll table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .divisiones-scroll thead {
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .divisiones-scroll thead th {
                background-color: #ffffff;
                border-bottom: 2px solid #dee2e6;
                position: sticky;
                top: 0;
                z-index: 11;
                box-shadow: 0 2px 2px -1px rgba(0,0,0,0.1);
            }

    .btn-opret-sm {
        background-color: #3D6FAD;
        color: white;
        border: 1px solid #000000;
        padding: 4px 8px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 4px;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

    .fondo-azul {
        background-color: #EAF2FB;
        border-radius: 12px;
        padding: 1rem;
    }

    .btn-opret-sm:hover {
        background-color: #2f5c91;
        color: #ffffff;
    }

    .btn-azul {
        background-color: #3D6FAD;
        color: white;
        width: 100%;
        padding: 0.75rem;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-azul:hover {
            background-color: #2f5c91;
            color: white;
        }

    .search-box {
        border: 1px solid black;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background-color: white;
    }

        .search-box input {
            border: none;
            outline: none;
            flex: 1;
        }

    .table-wrapper {
        max-height: auto;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

        .table-wrapper table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-wrapper thead th {
            position: sticky;
            top: 0;
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            z-index: 2;
        }

        .table-wrapper td {
            border: 1px solid #dee2e6;
            word-break: break-word;
            white-space: normal;
            vertical-align: top;
            padding: 0.5rem;
        }

            .table-wrapper td:empty {
                background-color: #f8f9fa;
            }

    .card-adjusted {
        height: 700px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-top: 1rem;
        margin-bottom: 2rem;
        padding: 2rem;
    }

    .divisiones-scroll {
        max-height: calc(2.5rem * 5 + 1rem);
        overflow-y: auto;
    }

    .btn-opretEliminar-sm {
        background-color: #F20505;
        color: white;
        border: 1px solid #000000;
        padding: 4px 8px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 4px;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-opretEliminar-sm:hover {
            background-color: #F20505;
            color: #ffffff;
        }
</style>

<div class="container-fluid d-flex flex-column compact-container">
    <h4 class="mt-3 mb-3">Listado de Departamentos</h4>

    <div class="card shadow-sm border-0 p-4 card-adjusted">
        <div class="search-box">
            <i class="bi bi-search" style="font-size: 1.2rem;"></i>
            <input type="text" id="searchInput" placeholder="Buscar por Encargado, Departamento o Iniciales" />
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <small id="contadorDepartamentos" class="text-muted">Departamentos visibles: @Model.Count()</small>
        </div>

        <div class="table-wrapper mb-3">
            <table id="tablaDepartamentos" class="table table-bordered table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Iniciales</th>
                        <th>Departamento</th>
                        <th>Encargado</th>
                        <th>Descripción</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var depto in Model)
                    {
                        <tr>
                            <td>@depto.Iniciales</td>
                            <td>@depto.Nombre</td>
                            <td>@depto.NombreEncargado</td>
                            <td>@depto.Descripcion</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    @if (rol == "Administrador")
                                    {
                                        <a asp-action="Edit" asp-route-id="@depto.Id" class="btn-opret-sm" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button type="button" class="btn-opretEliminar-sm" onclick="deleteItem(@depto.Id)" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                    else if (rol == "Usuario")
                                    {
                                        <button class="btn-opret-sm" type="button" data-bs-toggle="modal" data-bs-target="#modalDivisiones-@depto.Id" title="Divisiones del departamento">
                                            <i class="bi bi-diagram-3"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResults" class="text-muted text-center mt-2" style="display:none;">
                No se encontraron departamentos que coincidan con la búsqueda.
            </div>
        </div>

        @if (rol == "Usuario")
        {
            foreach (var depto in Model)
            {
                <div class="modal fade" id="modalDivisiones-@depto.Id" tabindex="-1" aria-labelledby="modalLabel-@depto.Id" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color: #2f5c91; color:white">
                                <h5 class="modal-title" id="modalLabel-@depto.Id">Divisiones de @depto.Nombre (@depto.Iniciales)</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                @if (depto.Divisiones != null && depto.Divisiones.Any())
                                {
                                    <div class="divisiones-scroll">
                                        <table class="table table-bordered table-striped align-middle mb-0">
                                            <thead>
                                                <tr>
                                                    <th style="width: 40%;">División</th>
                                                    <th style="width: 60%;">Descripción</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var div in depto.Divisiones)
                                                {
                                                    <tr>
                                                        <td style="width: 40%;">@div.Nombre</td>
                                                        <td style="width: 60%;">@div.Descripcion</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted">Este departamento no tiene divisiones registradas.</div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        @if (rol == "Administrador")
        {
            <div class="mt-auto">
                <a asp-action="Create" class="btn btn-azul d-flex justify-content-center align-items-center gap-2 w-100">
                    CREAR DEPARTAMENTO
                </a>
            </div>
        }
        else
        {
            <div class="mt-auto" style="height: 10px;"></div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const successMessage = '@Html.Raw(TempData["Success"]?.ToString())';
            const errorMessage = '@Html.Raw(TempData["Error"]?.ToString())';

            if (successMessage) {
                Swal.fire({
                    title: "¡Módulo Departamentos!",
                    text: successMessage,
                    icon: "success",
                    timer: 2000,
                    showConfirmButton: false,
                    timerProgressBar: true
                });
            } else if (errorMessage) {
                Swal.fire({
                    title: "¡Módulo Departamentos!",
                    text: errorMessage,
                    icon: "error",
                    confirmButtonText: "Entendido",
                    confirmButtonColor: "#3D6FAD"
                });
            }

            const input = document.getElementById("searchInput");
            if (input) {
                document.getElementById("searchInput").addEventListener("input", function () {
                    filtrarTablaPorColumnas("searchInput", "tablaDepartamentos", [0, 1, 2]);
                });
            }
        });

        function filtrarTablaPorColumnas(inputId, tablaId, columnas) {
            const filtro = document.getElementById(inputId)?.value.toLowerCase();
            const filas = document.querySelectorAll(`#${tablaId} tbody tr`);
            let visibles = 0;

            filas.forEach(fila => {
                const coincide = columnas.some(index => {
                    const texto = fila.children[index]?.textContent.toLowerCase() || "";
                    return texto.includes(filtro);
                });
                fila.style.display = coincide ? "" : "none";
                if (coincide) visibles++;
            });

            const mensaje = document.getElementById("noResults");
            if (mensaje) {
                mensaje.style.display = visibles === 0 ? "block" : "none";
            }

            const contador = document.getElementById("contadorDepartamentos");
            if (contador) {
                contador.textContent = `Departamentos visibles: ${visibles}`;
            }
        }

        function deleteItem(departamentoId) {
            Swal.fire({
                title: "¿Estás seguro?",
                text: "¡Una vez eliminado, no podrás recuperar este Departamento!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar",
                confirmButtonColor: "#F20505",
                cancelButtonColor: "#3D6FAD"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "Departamento")' + '?id=' + departamentoId;
                }
            });
        }
    </script>
}