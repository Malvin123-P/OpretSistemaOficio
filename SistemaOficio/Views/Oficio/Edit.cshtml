                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'Guardar cambios',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#F20505',
                cancelButtonColor: '#6c757d',
                customClass: {
                    actions: 'justify-content-start gap-2'
                },
                preConfirm: () => {
                    const textarea = document.getElementById('motivoTextarea');
                    const value = textarea.value.trim();

                    if (!value) {
                        Swal.showValidationMessage('Debe especificar el motivo antes de continuar.');
                        return;
                    }

                    if (value.length > 500) {
                        Swal.showValidationMessage('El motivo no puede exceder los 500 caracteres.');
                        return;
                    }

                    return value;
                },
                didOpen: () => {
                    const textarea = document.getElementById('motivoTextarea');
                    const contador = document.getElementById('contadorMotivo');

                    textarea.addEventListener('input', () => {
                        const length = textarea.value.length;
                        contador.textContent = `${length}/500 caracteres`;
                        contador.className = 'text-end mt-2 text-muted';

                        if (length >= 450) contador.classList.add('text-warning');
                        if (length >= 500) contador.classList.add('text-danger');
                    });

                    // Enfocar el textarea
                    setTimeout(() => textarea.focus(), 100);
                }
            });

            return motivo;
        }

        function protegerComponentes() {
            // Proteger contra interferencias de notificaciones
            $(document).on('DOMNodeInserted', function(e) {
                const target = $(e.target);
                if (target.hasClass('notificacion-item-usuario') ||
                    target.closest('.dropdown-notificaciones-usuario').length) {
                    return;
                }
            });
        }

        function esUrlValida(url) {
            try {
                new URL(url);
                return true;
            } catch {
                return false;
            }
        }

        $(document).ready(function () {
            // Mostrar advertencia si existe
            const warningMessage = '@Html.Raw(TempData["Warning"]?.ToString())';
            if (warningMessage) {
                Swal.fire({
                    icon: 'warning',
                    title: '¡Atención!',
                    text: warningMessage,
                    confirmButtonText: 'Entendido',
                    confirmButtonColor: '#3D6FAD'
                });
            }

            // Inicializar componentes
            inicializarComponentes();
            protegerComponentes();

            // Manejar errores de conexión
            $(document).ajaxError(function(event, jqxhr, settings, thrownError) {
                if (jqxhr.status === 0) {
                    Swal.fire({
                        title: 'Error de conexión',
                        text: 'No se pudo conectar al servidor. Verifique su conexión a internet.',
                        icon: 'error',
                        confirmButtonText: 'Entendido',
                        confirmButtonColor: '#3D6FAD'
                    });
                    enviandoFormulario = false;
                    $('#btnSubmit').prop('disabled', false).html('ACTUALIZAR OFICIO');
                }
            });

            // Mantener funcionalidad del editor
            $(document).on('click', '.note-btn', function() {
                setTimeout(function() {
                    const editable = $('.note-editable');
                    if (editable.length) {
                        editable.css('overflow-y', 'auto');
                        // Reforzar spellcheck después de acciones de toolbar
                        editable.attr('spellcheck', 'true');
                    }
                }, 50);
            });

            // Restaurar estado del botón si hay una recarga de página
            $(window).on('beforeunload', function() {
                if (enviandoFormulario) {
                    $('#btnSubmit').prop('disabled', false).html('ACTUALIZAR OFICIO');
                }
            });
        });

        // Función de recuperación si es necesario
        function reinicializarComponentes() {
            if (componentesInicializados) {
                try {
                    $('.selectpicker').selectpicker('refresh');
                } catch (error) {
                    console.log('Reinicializando selectpicker...');
                    $('.selectpicker').selectpicker();
                }

                // Reforzar Summernote si es necesario
                if ($('#summernote').summernote('isEmpty') && contenidoOriginal) {
                    $('#summernote').summernote('code', contenidoOriginal);
                }
            }
        }

        // Exponer función global
        window.reinicializarComponentesEdit = reinicializarComponentes;
    </script>
}