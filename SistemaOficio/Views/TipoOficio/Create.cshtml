@model OfiGest.Models.TipoOficioModel
@{
    ViewData["Title"] = "Crear Tipo de Oficio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-card {
        max-width: 900px;
        margin: 0 auto;
        margin-top: 1rem;
    }

    .btn-azul {
        background-color: #3D6FAD;
        color: white;
        width: 100%;
        padding: 0.75rem;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-azul:hover {
            background-color: #2f5c91;
            color: white;
        }

    .form-label span {
        font-weight: normal;
    }

    textarea {
        resize: none;
        height: 400px;
    }

    .card-adjusted {
        height: 700px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-top: 1rem;
        margin-bottom: 2rem;
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
</style>


<form asp-action="Create" method="post" enctype="multipart/form-data" id="createForm">
    <div class="container-fluid d-flex flex-column compact-container">
        @Html.AntiForgeryToken()

        <h4 class="mt-3 mb-3">Crear Tipo de Oficio</h4>
        <div class="card shadow-sm border-0 p-4 card-adjusted">

            <div class="row">
                <!-- Nombre -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label">@Html.DisplayNameFor(m => m.Nombre)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-file-earmark-text-fill"></i></span>
                        <input asp-for="Nombre" class="form-control" maxlength="100" placeholder="Ej: Oficio de solicitud de materiales" id="nombreInput" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger d-none"></span>
                </div>

                <!-- Iniciales -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Iniciales" class="form-label">
                        @Html.DisplayNameFor(m => m.Iniciales)
                        <small class="text-muted">(Puede editarse)</small>
                    </label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-code-slash"></i></span>
                        <input asp-for="Iniciales" class="form-control" id="codigoCorto" maxlength="20" placeholder="Ej: OFI-MAT, se sugiere automáticamente" />
                    </div>
                    <span asp-validation-for="Iniciales" class="text-danger d-none"></span>
                </div>
            </div>

            <!-- Descripción -->
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">
                    @Html.DisplayNameFor(m => m.Descripcion)
                    <span class="text-muted">(Opcional)</span>
                </label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                    <textarea asp-for="Descripcion" maxlength="500" class="form-control" placeholder="Ej: Oficio utilizado para solicitar materiales o insumos requeridos por el área correspondiente..."></textarea>
                </div>
                <span asp-validation-for="Descripcion" class="text-danger d-none"></span>
                <div id="contadorDescripcion" class="mt-2 text-muted text-end"></div>
            </div>

            <!-- Botón de envío -->
            <div class="mt-auto">
                <button type="submit" class="btn btn-azul d-flex justify-content-center align-items-center gap-2 w-100">
                    CREAR TIPO DE OFICIO
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

    <script>
        $(document).ready(function () {
            $('form').attr('novalidate', 'novalidate');
            $('.selectpicker').selectpicker();

            const ValidacionMessage = '@Html.Raw(TempData["Validacion"]?.ToString())';

            if (ValidacionMessage) {
                Swal.fire({
                    icon: "error",
                    title: "¡Atención!",
                    text: ValidacionMessage,
                    confirmButtonText: "Entendido",
                    confirmButtonColor: "#3D6FAD"
                });
            }

            const nombreInput = $('[name="Nombre"]');
            const inicialesInput = $('[name="Iniciales"]');
            const descripcionInput = $('[name="Descripcion"]');
            const contador = $('#contadorDescripcion');

            // Función para eliminar solo espacios al principio
            function limpiarEspaciosInicio(texto) {
                return texto.replace(/^\s+/, ''); // Solo elimina espacios al inicio
            }

            // Función para determinar el prefijo basado en el nombre
            function obtenerPrefijo(nombre) {
                const nombreLower = nombre.toLowerCase();
                if (nombreLower.includes('certificacion') || nombreLower.includes('certificación')) {
                    return 'CERT-';
                }
                return 'OFI-';
            }

            // Limpiar espacios al principio en el input de Nombre (solo en blur)
            nombreInput.on("blur", function () {
                $(this).val(limpiarEspaciosInicio($(this).val()));
            });

            // Generar iniciales automáticamente (sin limpiar espacios internos durante escritura)
            nombreInput.on("input", function () {
                let valor = $(this).val();
                const nombreActual = valor;

                if (nombreActual) {
                    const palabras = nombreActual.trim().split(/\s+/);
                    const generadas = palabras.map(p => p.charAt(0).toUpperCase()).join("");
                    const prefijo = obtenerPrefijo(nombreActual);

                    // Obtener el valor actual de iniciales (sin el prefijo actual)
                    const valorActual = inicialesInput.val().toUpperCase();
                    const prefijoActual = valorActual.startsWith('OFI-') ? 'OFI-' :
                                        valorActual.startsWith('CERT-') ? 'CERT-' : '';
                    const contenidoUsuario = prefijoActual ? valorActual.substring(prefijoActual.length) : valorActual;

                    // Combinar: prefijo correcto + iniciales generadas + contenido adicional del usuario
                    const combinadas = prefijo + generadas + contenidoUsuario.replace(generadas, '');
                    inicialesInput.val(combinadas);
                } else {
                    // Si no hay nombre, LIMPIAR las iniciales también
                    inicialesInput.val('');
                }
            });

            // Convertir iniciales a mayúsculas (sin eliminar espacios internos durante escritura)
            inicialesInput.on("input", function () {
                let valor = $(this).val();
                let valorLimpio = valor.toUpperCase();

                const nombreActual = nombreInput.val();
                const prefijo = nombreActual ? obtenerPrefijo(nombreActual) : 'OFI-';

                // Asegurar que siempre empiece con el prefijo correcto
                if (!valorLimpio.startsWith(prefijo)) {
                    // Si no tiene el prefijo correcto, remover cualquier prefijo existente y agregar el correcto
                    const sinPrefijo = valorLimpio.replace(/^(OFI-|CERT-)/, '');
                    valorLimpio = prefijo + sinPrefijo;
                }

                if (valor !== valorLimpio) {
                    $(this).val(valorLimpio);
                }
            });

            // Limpiar espacios al principio en el input de Iniciales (solo en blur)
            inicialesInput.on("blur", function () {
                let valor = $(this).val();
                let valorLimpio = limpiarEspaciosInicio(valor).toUpperCase();

                const nombreActual = nombreInput.val();
                const prefijo = nombreActual ? obtenerPrefijo(nombreActual) : 'OFI-';

                if (!valorLimpio.startsWith(prefijo)) {
                    const sinPrefijo = valorLimpio.replace(/^(OFI-|CERT-)/, '');
                    valorLimpio = prefijo + sinPrefijo;
                }

                $(this).val(valorLimpio);
            });

            // Limpiar espacios al principio en el textarea de Descripción (solo en blur)
            descripcionInput.on("blur", function () {
                $(this).val(limpiarEspaciosInicio($(this).val()));
            });

            // Inicializar el campo de iniciales solo si tiene nombre y está vacío
            if (!inicialesInput.val().trim()) {
                const nombreActual = nombreInput.val().trim();
                if (nombreActual) {
                    const prefijo = obtenerPrefijo(nombreActual);
                    inicialesInput.val(prefijo);
                }
            } else {
                // Si el usuario lo dejó vacío manualmente, respetar esa decisión
                if (inicialesInput.val().trim() === '') {
                    inicialesInput.val('');
                    return;
                }

                // Asegurar que el valor existente tenga el formato correcto
                let valorActual = inicialesInput.val().toUpperCase();
                const nombreActual = nombreInput.val().trim();
                const prefijo = nombreActual ? obtenerPrefijo(nombreActual) : 'OFI-';

                if (!valorActual.startsWith(prefijo)) {
                    const sinPrefijo = valorActual.replace(/^(OFI-|CERT-)/, '');
                    inicialesInput.val(prefijo + sinPrefijo);
                } else {
                    inicialesInput.val(valorActual);
                }
            }

            if (descripcionInput.length) {
                const maxLength = 500;
                const umbral = 450;
                let alertaMostrada = false;

                descripcionInput.on("input", function () {
                    const actual = descripcionInput.val().length;
                    contador.text(`${actual}/${maxLength} caracteres`);
                    contador.removeClass("text-warning text-danger");

                    if (actual >= maxLength) {
                        contador.addClass("text-danger");
                        if (!alertaMostrada) {
                            Swal.fire({
                                title: "Límite alcanzado",
                                text: "Has llegado al máximo de 500 caracteres permitidos.",
                                icon: "warning",
                                confirmButtonText: "Entendido",
                                confirmButtonColor: "#3D6FAD"
                            });
                            alertaMostrada = true;
                        }
                    } else if (actual >= umbral) {
                        contador.addClass("text-warning");
                        alertaMostrada = false;
                    } else {
                        alertaMostrada = false;
                    }
                });

                const actual = descripcionInput.val().length;
                contador.text(`${actual}/${maxLength} caracteres`);
                if (actual >= maxLength) contador.addClass("text-danger");
                else if (actual >= umbral) contador.addClass("text-warning");
            }

            $('#createForm').on('submit', function (e) {
                e.preventDefault();

                // Limpiar espacios al principio antes de enviar
                nombreInput.val(limpiarEspaciosInicio(nombreInput.val()));

                let inicialesLimpio = limpiarEspaciosInicio(inicialesInput.val()).toUpperCase();
                const nombreActual = nombreInput.val();
                const prefijo = nombreActual ? obtenerPrefijo(nombreActual) : 'OFI-';

                if (!inicialesLimpio.startsWith(prefijo)) {
                    const sinPrefijo = inicialesLimpio.replace(/^(OFI-|CERT-)/, '');
                    inicialesLimpio = prefijo + sinPrefijo;
                }
                inicialesInput.val(inicialesLimpio);

                descripcionInput.val(limpiarEspaciosInicio(descripcionInput.val()));

                const nombreActualizado = nombreInput.val();
                const inicialesActualizadas = inicialesInput.val();

                // Validación corregida - más simple y efectiva
                if (!nombreActualizado || !inicialesActualizadas) {
                    Swal.fire({
                        title: '<span>Campos requeridos (<span style="color:#dc3545">*</span>)</span>',
                        text: "Por favor complete todos los campos obligatorios.",
                        icon: "warning",
                        confirmButtonText: "Entendido",
                        confirmButtonColor: "#3D6FAD"
                    });
                    return false;
                }

                // Validar que las iniciales tengan contenido después del prefijo
                const tienePrefijo = inicialesActualizadas.startsWith('OFI-') || inicialesActualizadas.startsWith('CERT-');
                const contenidoDespuesPrefijo = inicialesActualizadas.substring(inicialesActualizadas.indexOf('-') + 1);

                if (!tienePrefijo || !contenidoDespuesPrefijo) {
                    Swal.fire({
                        title: "Formato incorrecto",
                        text: "Las iniciales deben comenzar con OFI- o CERT- y tener contenido después del guión.",
                        icon: "warning",
                        confirmButtonText: "Entendido",
                        confirmButtonColor: "#3D6FAD"
                    });
                    return false;
                }

                this.submit();
            });
        });
    </script>
}