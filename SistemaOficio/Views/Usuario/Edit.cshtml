@model OfiGest.Models.UsuarioModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-azul {
        background-color: #3D6FAD;
        color: white;
        width: 100%;
        padding: 0.75rem;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-azul:hover {
            background-color: #2f5c91;
            color: white;
        }

    .bootstrap-select .dropdown-toggle {
        border: 1px solid #ced4da;
        border-radius: .25rem;
        background: white;
    }


    .bootstrap-select .dropdown-menu li.selected > a {
        background-color: #3D6FAD !important;
        color: white !important;
    }

    .form-label span {
        font-weight: normal;
    }

    .card-body {
        padding: 2rem;
    }

    .card-adjusted {
        height: 700px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-top: 1rem;
        margin-bottom: 2rem;
        padding: 2rem;
    }

    .is-invalid {
        border-color: #dc3545;
    }

    .bootstrap-select .dropdown-toggle.is-invalid {
        border-color: #dc3545;
    }

    .form-check-input:checked {
        background-color: #0B5926;
        border-color: #0B5926;
    }

    .imagen-perfil-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #3D6FAD;
        margin: 10px auto;
        display: block;
    }

    .imagen-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: #f8f9fa;
        border: 2px dashed #dee2e6;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 10px auto;
        color: #6c757d;
        font-size: 14px;
        text-align: center;
    }

    .preview-container {
        text-align: center;
        margin-bottom: 20px;
    }

     .btn-verde {
        background-color: #0B5926;
        color: #fff;
        font-weight: bold;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        transition: background-color 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-decoration: none;
    }

        .btn-verde:hover,
        .btn-verde:focus,
        .btn-verde.active {
            background-color: #09491F;
            color: #fff;
            outline: none;
        }
</style>

<form asp-action="Edit" method="post" autocomplete="off" id="editForm" enctype="multipart/form-data">
    <div class="container-fluid d-flex flex-column compact-container">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImagenPerfil" id="imagenPerfilActual" />

        @Html.AntiForgeryToken()
        <h4 class="mt-3 mb-3">Editar Usuarios</h4>
        <div class="card shadow-sm border-0 p-6 card-adjusted">


            <div class="row">

                <div class="col-md-6 mb-3">
                    <label asp-for="ArchivoImagen" class="form-label">Subir nueva Imagen de Perfil</label>
                    <input asp-for="ArchivoImagen" type="file" class="form-control"
                           accept=".jpg,.jpeg,.png,.gif" id="archivoImagen" />
                    <small class="form-text text-muted">Formatos permitidos: JPG, JPEG, PNG, GIF. Máximo 2MB.</small>
                    <span asp-validation-for="ArchivoImagen" class="text-danger"></span>

                    @if (!string.IsNullOrEmpty(Model.ImagenPerfil))
                    {
                        <div class="mt-2">
                            <a asp-action="DescargarImagen"
                               asp-route-ruta="@Model.ImagenPerfil"
                               class="btn btn-verde btn-sm"
                               title="Descargar imagen de perfil">
                                <i class="fas fa-download"></i> Descargar imagen actual
                            </a>
                        </div>
                    }
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label">@Html.DisplayNameFor(m => m.Nombre)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <input asp-for="Nombre" class="form-control" maxlength="100" placeholder="Ej: Mario" required aria-required="true" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Apellido" class="form-label">@Html.DisplayNameFor(m => m.Apellido)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <input asp-for="Apellido" class="form-control" maxlength="100" placeholder="Ej: Ramírez Moreta" required aria-required="true" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Correo" class="form-label">@Html.DisplayNameFor(m => m.Correo)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <input asp-for="Correo" class="form-control" maxlength="150" placeholder="Ej: mario@opret.gob.do" id="Correo" required aria-required="true" />
                    <small id="correo-feedback" class="form-text text-muted mt-1"></small>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DepartamentoId" class="form-label">@Html.DisplayNameFor(m => m.DepartamentoId)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <select asp-for="DepartamentoId" asp-items="ViewBag.Departamentos" class="form-control selectpicker" data-live-search="true" data-size="5" id="DepartamentoId" required aria-required="true">
                        <option value="">Seleccione el departamento al que pertenece</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3" id="rolGroup">
                    <label asp-for="RolId" class="form-label">@Html.DisplayNameFor(m => m.RolId)</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <select asp-for="RolId" asp-items="ViewBag.Roles" class="form-control selectpicker" data-live-search="true" data-size="5" id="RolId" required aria-required="true">
                        <option value="">Seleccione el rol que desempeña</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3" id="divisionGroup">
                    <label asp-for="DivisionId" class="form-label">@Html.DisplayNameFor(m => m.DivisionId)</label>
                    <span class="text-danger indicador-division" title="Campo obligatorio">*</span>
                    <select asp-for="DivisionId" asp-items="ViewBag.Divisiones" class="form-control selectpicker" data-live-search="true" data-size="5" id="DivisionId">
                        <option value="">Seleccione la división correspondiente</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Activo" class="form-label">Estado del Usuario</label>
                    <span class="text-danger" title="Campo obligatorio">*</span>
                    <select asp-for="Activo" class="form-control selectpicker" data-size="2">
                        <option value="true" selected="@Model.Activo">Activo</option>
                        <option value="false" selected="@(!Model.Activo)">Inactivo</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="EsEncargadoDepartamental" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" />
                        <label class="form-check-label" for="flexSwitchCheckDefault">Encargado Departamental</label>
                        <br />
                        <small class="form-text text-muted">
                            Si se marca, el usuario será el encargado del departamento y no requerirá división.
                        </small>
                    </div>
                </div>
            </div>


            <div class="mt-auto">
                <button type="submit" class="btn btn-azul d-flex justify-content-center align-items-center gap-2 w-100">
                    ACTUALIZAR USUARIO
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script>
        $(function () {
            $('form').attr('novalidate', 'novalidate');
            $('.selectpicker').selectpicker();

            const warningMessage = '@Html.Raw(TempData["Warning"]?.ToString())';
            const ValidacionMessage = '@Html.Raw(TempData["Validacion"]?.ToString())';

            if (warningMessage) {
                Swal.fire({
                    icon: "warning",
                    title: "¡Atención!",
                    text: warningMessage,
                    confirmButtonText: "Entendido",
                    confirmButtonColor: "#3D6FAD"
                });
            } else if (ValidacionMessage) {
                Swal.fire({
                    icon: "error",
                    title: "¡Atención!",
                    text: ValidacionMessage,
                    confirmButtonText: "Entendido",
                    confirmButtonColor: "#3D6FAD"
                });
            }

            // Referencias a los inputs de texto
            const nombreInput = $('[name="Nombre"]');
            const apellidoInput = $('[name="Apellido"]');
            const correoInput = $('[name="Correo"]');
            const divisionSelect = $('#DivisionId');
            const departamentoSelect = $('#DepartamentoId');
            const encargadoCheckbox = $('#flexSwitchCheckDefault');
            const indicadorDivision = $('.indicador-division');
            const archivoImagen = $('#archivoImagen');

          const divisionActualId = '@(Model.DivisionId.HasValue ? Model.DivisionId.ToString() : "")';
                const usuarioId = '@Model.Id';
                const correoOriginal = '@Model.Correo';

                let correoValido = true;

                const regexCorreo = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

                correoInput.on('blur', function () {
                    const correo = $(this).val().trim();
                    const feedback = $('#correo-feedback');

                    // Si está vacío, limpiar feedback
                    if (correo === "") {
                        feedback.html('');
                        feedback.removeClass('text-success text-warning text-danger text-muted');
                        correoInput.removeClass('is-valid is-invalid');
                        correoValido = false;
                        return;
                    }

                    // Validación de formato
                    if (!regexCorreo.test(correo)) {
                        feedback.html('<i class="fas fa-info-circle text-danger"></i> Formato de correo inválido');
                        feedback.addClass('text-danger').removeClass('text-success text-warning text-muted');
                        correoValido = false;
                        return;
                    }

                    // Si no ha cambiado, marcar como válido
                    if (correo === correoOriginal) {
                        feedback.html('<i class="fas fa-check-circle text-success"></i> Correo actual');
                        feedback.addClass('text-success').removeClass('text-warning text-danger text-muted');
                        correoValido = true;
                        return;
                    }

                    // Verificación en servidor
                    $.get('@Url.Action("VerificarCorreo")', {
                        correo: correo,
                        excludeId: usuarioId
                    })
                        .done(function (data) {
                            if (!data.dominioValido) {
                                feedback.html(`<i class="fas fa-ban text-danger"></i> ${data.mensaje}`);
                                feedback.addClass('text-danger').removeClass('text-success text-warning text-muted');
                                correoValido = false;
                            } else if (data.existe) {
                                feedback.html('<i class="fas fa-exclamation-triangle text-warning"></i> Ya existe un usuario con este correo');
                                feedback.addClass('text-warning').removeClass('text-success text-danger text-muted');
                                correoValido = false;
                            } else {
                                feedback.html('<i class="fas fa-check-circle text-success"></i> Correo disponible');
                                feedback.addClass('text-success').removeClass('text-warning text-danger text-muted');
                                correoValido = true;
                            }
                        })
                    .fail(function () {
                        feedback.html('<i class="fas fa-exclamation-circle text-danger"></i> Error al verificar correo');
                        feedback.addClass('text-danger').removeClass('text-success text-warning text-muted');
                        correoInput.addClass('is-invalid').removeClass('is-valid');
                        correoValido = false;
                    });
                });
         
            // Función para eliminar espacios extras
            function limpiarEspacios(texto) {
                return texto.replace(/\s+/g, ' ').trim();
            }

            // Limpiar espacios en el input de Nombre
            nombreInput.on("input", function () {
                let valor = $(this).val();
                let valorLimpio = limpiarEspacios(valor);

                if (valor !== valorLimpio) {
                    $(this).val(valorLimpio);
                }
            });

            nombreInput.on("blur", function () {
                $(this).val(limpiarEspacios($(this).val()));
            });

            // Limpiar espacios en el input de Apellido
            apellidoInput.on("input", function () {
                let valor = $(this).val();
                let valorLimpio = limpiarEspacios(valor);

                if (valor !== valorLimpio) {
                    $(this).val(valorLimpio);
                }
            });

            apellidoInput.on("blur", function () {
                $(this).val(limpiarEspacios($(this).val()));
            });

            // Limpiar espacios en el input de Correo
            correoInput.on("input", function () {
                let valor = $(this).val();
                let valorLimpio = valor.replace(/\s+/g, '').trim();

                if (valor !== valorLimpio) {
                    $(this).val(valorLimpio);
                }
            });

            correoInput.on("blur", function () {
                $(this).val($(this).val().replace(/\s+/g, '').trim());
            });

            function cargarDivisiones(departamentoId, divisionIdSeleccionada) {
                divisionSelect.empty().append('<option value="">Cargando...</option>').selectpicker('refresh');
                $.getJSON('/Usuario/ObtenerDivisionesPorDepartamento', { departamentoId }, function (data) {
                    divisionSelect.empty();
                    if (data.length === 0) {
                        divisionSelect.append('<option value="">No hay divisiones disponibles</option>');
                    } else {
                        divisionSelect.append('<option value="">Seleccione una división</option>');
                        data.forEach(division => {
                            divisionSelect.append(`<option value="${division.id}">${division.nombre}</option>`);
                        });
                    }
                    divisionSelect.selectpicker('refresh');

                    if (divisionIdSeleccionada) {
                        divisionSelect.val(divisionIdSeleccionada).selectpicker('refresh');
                    }
                }).fail(function () {
                    divisionSelect.empty().append('<option value="">Error al cargar divisiones</option>').selectpicker('refresh');
                });
            }

            function actualizarEstadoDivision() {
                const esEncargado = encargadoCheckbox.is(':checked');
                const departamentoId = departamentoSelect.val();

                if (esEncargado) {
                    divisionSelect.prop('disabled', true).val('').selectpicker('refresh');
                    indicadorDivision.hide();
                    divisionSelect.removeAttr('required');
                } else {
                    divisionSelect.prop('disabled', false);
                    indicadorDivision.show();
                    divisionSelect.attr('required', 'required');

                    if (departamentoId) {
                        cargarDivisiones(departamentoId, divisionActualId);
                    } else {
                        divisionSelect.empty().append('<option value="">Seleccione un departamento primero</option>').selectpicker('refresh');
                    }
                }
            }

            encargadoCheckbox.on('change', actualizarEstadoDivision);
            departamentoSelect.on('change', function () {
                const departamentoId = $(this).val();
                if (!encargadoCheckbox.is(':checked')) {
                    cargarDivisiones(departamentoId, "");
                }
            });

            actualizarEstadoDivision();

            $('#editForm').on('submit', function (e) {
                // Limpiar espacios finales antes de enviar
                nombreInput.val(limpiarEspacios(nombreInput.val()));
                apellidoInput.val(limpiarEspacios(apellidoInput.val()));
                correoInput.val(correoInput.val().replace(/\s+/g, '').trim());

                const esEncargado = encargadoCheckbox.is(':checked');
                let validacionFallida = false;
                let mensajeError = '';

                // Validar campos obligatorios
                const camposObligatorios = ['Nombre', 'Apellido', 'Correo', 'DepartamentoId', 'RolId'];
                camposObligatorios.forEach(nombre => {
                    const campo = document.querySelector(`[name="${nombre}"]`);
                    if (campo && !campo.value.trim()) {
                        validacionFallida = true;
                        mensajeError = "Por favor, complete todos los campos obligatorios.";
                    }
                });

                const selectpickers = ['DepartamentoId', 'RolId'];
                selectpickers.forEach(id => {
                    const select = $('#' + id);
                    if (!select.val()) {
                        validacionFallida = true;
                        mensajeError = "Por favor, complete todos los campos obligatorios.";
                    }
                });

                if (!esEncargado && (!divisionSelect.val() || divisionSelect.val() === '')) {
                    validacionFallida = true;
                    mensajeError = "Por favor, complete todos los campos obligatorios.";
                }

                // Validar correo duplicado
                if (!correoValido && correoInput.val().trim() !== correoOriginal) {
                    validacionFallida = true;
                    mensajeError = "El correo electrónico ya está en uso por otro usuario. Por favor, elija otro correo.";
                }

                if (validacionFallida) {
                    e.preventDefault();
                    Swal.fire({
                        title: '<span>Error de validación</span>',
                        text: mensajeError,
                        icon: "warning",
                        confirmButtonText: "Entendido",
                        confirmButtonColor: "#3D6FAD"
                    });
                }
            });
        });
    </script>
}